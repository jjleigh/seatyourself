<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <link href='http://fonts.googleapis.com/css?family=Josefin+Sans:400italic' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header id="head-nav">
		<nav class="nav-bars">
			<table>
				<tbody>
					<tr>
						<td id="logo">
							<h1>Seat yourself</h1>
						</td>
						<td id="about">
							<h4>About</h4>
						</td>
						<td id='login'>
							<h4>Log In</h4>
						</td>
						<td id='signup'>
							<h4>Sign up</h4>
						</td>
					</tr>
				</tbody>
			</table>
		</nav>
	</header>
	<% if flash[:notice] %>
		<p id='notice'><% flash[:notice] %></p>
	<% end %>

	<% if flash[:notice] %>
		<p id="alert"><%= flash[:alert] %></p>
	<% end %>
	
<%= yield %>

	<p>
		<% if current_user %>
			signed in as <%= current_user.email %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
		<% else %>
			<%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
		<% end %>
	</p>
	<footer id="foot-nav">
		<nav class="nav-bars">
			<table>
				<tbody>
					<tr>
						<td>
							<h5 id="contact-us">Contact us</h5>
						</td>
						<td>
							<h5 id="questions">FAQ</h5>
						</td>
					</tr>
				</tbody>
			</table>
		</nav>
	</footer>
</body>
</html>
