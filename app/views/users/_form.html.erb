<%= form_for (@user) do |f| %>
	
	<div class = 'fields'>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	
	<div class = 'fields'>
		<%=f.label :email %><br />
		<%= f.text_field :email%>
	</div>

	<div class = 'fields'>
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>
	<div class = 'fields'>
		<%= f.label :password_confirmation %><br />
		<%= f.password_field :password_confirmation %>
	</div>
	<div class = 'actions'>
		<%= f.submit %>
	</div>
<% end %>