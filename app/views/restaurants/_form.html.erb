<div class="row">
	<div class="large-7 large-centered columns">
		<%= form_for(@restaurant) do |f| %>
			<% if @restaurant.errors.any? %>

				<div id="error_explanation">
					<h2><%= pluralize(@restaurant.errors.count, "error") %>prohibited this product from being saved:</h2>
					<ul>
						<% @restaurant.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>

					</ul>
				</div>
			<% end %>
			<div class="site-forms">
				<div class= "field">
					<%= f.label :name %><br/>
					<%= f.text_field :name  %>
				</div>

				<div class= "field">
					<%= f.label :email %><br />
					<%= f.text_field :email %>
				</div>

				<div class= "field">
					<%= f.label :address %><br />
					<%= f.text_field :address %>
				</div>
				<div class= "field">
					<%= f.label :number %><br />
					<%= f.text_field :number %>
				</div>

				<div class= "field">
					<%= f.label :cuisine %><br />
					<%= f.select(:category_id, options_for_select(@cat_list)) %>
				</div>
				<div class= "field">
					<%= f.label :summary %><br />
					<%= f.text_field :summary %>
				</div>
				<div class= "field">
					<%= f.label :price_range %><br />
					<%= f.select(:price_range, options_for_select([['$', 'Low'], ['$$', 'Mid-range'], ['$$$', 'High']])) %>
				</div>
					<div class= "field">
					<%= f.label :capacity %><br />
					<%= f.text_field :capacity %>
				</div>


				<div class="actions">
					<%= f.submit 'Create', :class => 'button'%>
				</div>
			</div>
		<% end %>
	</div>
</div>

