<!-- This holds the resturant information -->

<div class="row">
	
  <div class="large-12 columns">
  	<div class='restaurant-bg'>


<!-- about the restaurant -->
      <div class="row">
     
	      	<div class="large-4 columns">
	      		<!-- <img src="http://4.bp.blogspot.com/-7-QoLtYvRMA/UthhyiiMGxI/AAAAAAAAOZM/GyddpyylOmU/s1600/miso+soup-+lede-1.jpg"> -->
	      		
	        	<%= image_tag (@restaurant.url) , :class => 'restaurant-image' %>
					</div>
	

        <div class="large-8 columns">
        	<div class="about-restaurant">
        		<h1><%= @restaurant.name %></h1>
        		<%= link_to '', edit_restaurant_path(@restaurant), :class => 'fa fa-pencil' %><br/>
      			<p><strong>Cuisine: </strong><%= @restaurant.category.cuisine%></p>
      			<p><%#= @restuarant.rating%></p>
      			<p><strong>Price range: </strong><%= @restaurant.price_range%></p>
        	</div>
      	</div>
      </div>


<!-- restaurant contact -->
			<div class="row">
				<div class="large-12 columns">
					<div class="contact-restaurant">
						<p><strong>Phone:</strong> <%= @restaurant.number%></p>
				   	<p><strong>Address:</strong> <%= @restaurant.address%></p>
						<p><strong>Email:</strong> <%= @restaurant.email%></p>
						<p><strong>Capacity:</strong> <%= @restaurant.capacity%></p>
					</div>
				</div>
			</div>
			
			<div class="row">
				<div class="large-10 large-centered columns">
					<div class="summary-restaurant">
						<p><strong>Summary:</strong> <%= @restaurant.summary%></p>
						<!-- only show this if you are the owner of this restaurant -->
						
						<%#= link_to 'Delete Account', restaurant_path(@restaurant), :method => :delete %><br/>
						<%= link_to 'Make a Revervation', new_restaurant_reservation_path(@restaurant) %>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>


<!-- reviews -->
	<div class="row">
		<div class="large-12 columns">
			<!-- put all comments here -->
		</div>
	</div>
