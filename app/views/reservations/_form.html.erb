<div class="row">
	<div class="large-12 large-centered columns">
		<%= form_for [@restaurant, @reservation] do |f| %>

			<% if @reservation.errors.any? %>
				<div id="error_explanation">
					<h2><%= pluralize(@reservation.errors.count, "error") %>prohibited this products from being saved:</h2>
					<ul>
						<% @reservation.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			<% end %>
			<div class="site-forms">
				<div class="fields">
					<%= f.label :time %><br>
					<%= f.select(:time, options_for_select(['6:00pm','7:00pm','8:00pm', '9:00pm', '10:00pm']))%>
				</div>
				<%=f.hidden_field_tag :restaurant %>
				<div class="fields">
					<%= f.label :date %><br>
					<%= f.select(:date, options_for_select(@limit)) %>
				</div>

				<div class="fields">
					<%= f.label :group_size %><br>
					<%= f.text_field :group_size %>
				</div>

				<div class="actions">
					<%= f.submit 'Create', :class => 'button'%>
				</div>
			</div>
		<% end %> 

	</div>
</div>
