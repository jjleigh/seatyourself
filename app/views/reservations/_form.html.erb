<%= form_for (@reservation) do |f| %>
	<div class="fields">
		<%= f.label :time %><br>
		<%= f.text_field :time %>
	</div>
	<div class="fields">
		<%= f.label :date %><br>
		<%= f.text_field :date %>
	</div>
	<div class="fields">
		<%= f.label :group_size %><br>
		<%= f.text_field :group_size %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %> 